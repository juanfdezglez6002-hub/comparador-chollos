<body>

<header>
    <h1>CholloTracker</h1>
    <p id="update-date">Cargando ofertas...</p>
</header>

<div class="container">
    <div id="productos-grid" class="grid">
        </div>
</div>

<footer>
    <p>Como afiliado de Amazon, obtengo ingresos por las compras adscritas que cumplen los requisitos aplicables.</p>
</footer>

<script>
    // Script para leer el JSON y dibujar los productos
    fetch('data.json')
        .then(response => response.json())
        .then(data => {
            document.getElementById('update-date').innerText = "Última actualización: " + data.last_updated;
            const grid = document.getElementById('productos-grid');
            
            if (data.productos.length === 0) {
                grid.innerHTML = "<p>Buscando nuevos chollos... Vuelve en unos minutos.</p>";
            }

            data.productos.forEach(p => {
                grid.innerHTML += `
                    <div class="card">
                        <span class="badge">Amazon más barato</span>
                        <img src="${p.imagen}" alt="${p.nombre}">
                        <h3>${p.nombre}</h3>
                        <p class="price-old">En ${p.tienda_competencia}: ${p.precio_competencia}€</p>
                        <p class="price-amz">Amazon: ${p.precio_amazon}€</p>
                        <a href="${p.url_afiliado}" class="btn">Ver en Amazon</a>
                    </div>
                `;
            });
        })
        .catch(err => {
            document.getElementById('productos-grid').innerHTML = "Error al cargar los datos. Asegúrate de que el robot ya haya corrido.";
        });
</script>

</body>
</html>
